<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.SliderPage"
             Title="SliderPage">



    <StackLayout Padding="15">

        <Slider x:Name="slider" ThumbColor="Red"
                Maximum="30"
                MinimumTrackColor="Green"
                MaximumTrackColor="DarkBlue"/>

        <Label FontSize="30" HorizontalOptions="Center" Text="{Binding Source={x:Reference slider},Path=Value,StringFormat='{0:f1}'}"/>

    </StackLayout>
</ContentPage>