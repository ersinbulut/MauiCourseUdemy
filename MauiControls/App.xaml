<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiControls"
             x:Class="MauiControls.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Shell">
                <Setter Property="Shell.TabBarBackgroundColor" Value="#222831"/>
                <Setter Property="Shell.TabBarForegroundColor" Value="#EEEEEE"/>
                <Setter Property="Shell.TabBarTitleColor" Value="#00ADB5"/>
                <Setter Property="Shell.TabBarUnselectedColor" Value="#AAAAAA"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
