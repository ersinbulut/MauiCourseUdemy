<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.EntryEditorPage"
             Title="EntryEditorPage">



    <StackLayout Padding="15">
        <Entry 
           FontSize ="20"
           TextColor="Red"
           Placeholder="Kullanıcı Adı"
           PlaceholderColor="Green" 
            IsPassword="False"
            Keyboard="Text"
            MaxLength="4"
            ReturnType="Next"
            />
        <Entry 
         FontSize ="20"
         TextColor="Red"
         Placeholder="Kullanıcı Adı"
         PlaceholderColor="Green" 
          IsPassword="False"
          Keyboard="Email"
          MaxLength="4"
          ReturnType="Search"
      />

        <Editor BackgroundColor="#f13234" VerticalOptions="FillAndExpand"/>



    </StackLayout>
</ContentPage>