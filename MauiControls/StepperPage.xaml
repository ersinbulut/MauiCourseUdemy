<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.StepperPage"
             Title="StepperPage">
    <StackLayout>
        <Stepper x:Name="stepper" Minimum="0" Maximum="100" Increment="10" ValueChanged="stepper_ValueChanged"/>
        <Label FontSize="30" HorizontalOptions="Center" Text="{Binding Source={x:Reference stepper},Path=Value,StringFormat='{0:f1}'}"/>
    </StackLayout>   



</ContentPage>