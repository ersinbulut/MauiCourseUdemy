<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.RefreshViewPage"
             Title="RefreshViewPage"
           >

    <RefreshView x:Name="myRefreshView" Refreshing="RefreshView_Refreshing">
        <CollectionView x:Name="myCollection" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="0" Margin="0,10" BorderColor="Gray" CornerRadius="10" HasShadow="True">
                        <Grid>
                            <Image Source="{Binding ImageSource}"
                                   Aspect="AspectFill"
                                   HeightRequest="200"/>
                            <Label Text="{Binding Title}"
                                   VerticalOptions="End"
                                   HorizontalOptions="Center"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   Margin="0,0,0,10"
                                   BackgroundColor="#80000000"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>

</ContentPage>
