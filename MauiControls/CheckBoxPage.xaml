<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.CheckBoxPage"
             Title="CheckBoxPage">


    <StackLayout Padding="15">
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Label Text="Okudum Onaylıyorum." VerticalOptions="Center"/>
            <CheckBox Color="Green" x:Name="checkbox" CheckedChanged="CheckBox_CheckedChanged"/>
            <Label Text="{Binding Source={x:Reference checkbox},Path=IsChecked,StringFormat='değer:{0}'}"></Label>
        </StackLayout>
    </StackLayout>
</ContentPage>