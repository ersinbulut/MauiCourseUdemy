<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.ActivityIndicatorPage"
             Title="ActivityIndicatorPage">


    <Grid>
        <Image
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Aspect="AspectFill"
            Source="https://resimakademi.com.tr/uploads/2023/04/resim-yapmanin-faydalari-1.jpg"
               x:Name="myImage"/>
        <ActivityIndicator
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Color="Red"
            HeightRequest="100"
            WidthRequest="100"
            IsRunning="{Binding Source={x:Reference myImage},Path=IsLoading}"/>
        <Button Text="Resmi değiştir" Margin="15"
                BackgroundColor="Black"
                TextColor="White"
                Clicked="Button_Clicked"
                VerticalOptions="EndAndExpand"/>
    </Grid>
    
    
</ContentPage>